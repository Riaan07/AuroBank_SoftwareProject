@if (User.IsInRole("User"))
{
    <div class="d-flex">
        <!-- Side navigation bar -->
        <ul class="nav flex-column nav-pills bg-success p-3 shadow rounded" style="width: 280px; height: 50vh; align-items: left;">
           
            <li class="nav-item mb-2">
                <a class="nav-link d-flex align-items-center text-dark rounded" asp-action="TransferMoneyview" asp-controller="Client">
                    <i class="fas fa-exchange-alt me-2 text-light"></i>
                    <span>Transfer Money</span>
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link d-flex align-items-center text-dark rounded" asp-action="Transactions" asp-controller="Client">
                    <i class="fas fa-list me-2 text-warning"></i>
                    <span>Transactions</span>
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link d-flex align-items-center text-dark rounded" asp-action="Notifications" asp-controller="Client">
                    <i class="fas fa-bell me-2 text-info"></i>
                    <span>Notifications</span>
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link d-flex align-items-center text-dark rounded" asp-action="AddRating" asp-controller="Client">
                    <i class="fas fa-star me-2 text-warning"></i>
                    <span>Rate</span>
                </a>
            </li>

            @* <li class="nav-item mb-2">
                <a asp-action="ViewBookings" class="nav-link d-flex align-items-center text-dark rounded">
                    <i class="fas fa-calendar-alt me-2 text-danger"></i>
                    <span>View Bookings</span>
                </a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center text-dark rounded" asp-action="UpdateProfile" asp-controller="Account">
                    <i class="fas fa-user-edit me-2 text-light"></i>
                    <span>Update Profile</span>
                </a>
            </li>
        </ul>

        <!-- Main content area -->
        <div class="flex-grow-1 d-flex justify-content-center align-items-center">
            <div class="card p-3" style="width: 450px; background: linear-gradient(135deg, #FFD700, #182848); border-radius: 15px; color: #fff;">
                <div class="card-body">
                    <!-- Bank Logo -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Aurobank</h5>
                        <img src="~/images/UfsLogo.png" alt="Bank Logo" style="width: 80px;">
                    </div>

                    <!-- Account Holder Information -->
                    <h6 class="mb-1">Account Holder</h6>
                    <h4 class="fw-bold">@Model.FirstName @Model.LastName</h4>

                    <!-- Account Number -->
                    <h6 class="mt-3 mb-1">Account Number</h6>
                    <p class="fw-bold text-dark" style="font-size: 1.2em;"> @Model.AccountNumber</p>

                    <!-- Balance Information -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <h6 class="mb-1">Balance</h6>
                            <h4 class="fw-bold">R @Model.Balance.ToString("N2")</h4>
                        </div>
                        <!-- Card Chip -->
                        <div style="width: 40px; height: 30px; background: #d1c7c7; border-radius: 5px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


