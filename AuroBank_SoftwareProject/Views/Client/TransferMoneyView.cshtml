@model ClientViewModel.MoneyTransferViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white text-center py-4" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <h3 class="mb-0">Transfer Money</h3>
                </div>
                <div class="card-body px-5 py-4">
                    <form asp-action="TransferMoneyView" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="table-responsive">
                            <table class="table table-bordered align-middle" style="background-color: #f8f9fa; border-radius: 10px;">
                                <tr>
                                    <td style="width: 40%;">
                                        <label asp-for="SenderBankAccountNumber" class="form-label">Sender Account Number</label>
                                    </td>
                                    <td>
                                        <input asp-for="SenderBankAccountNumber" class="form-control" readonly />
                                        <span asp-validation-for="SenderBankAccountNumber" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label asp-for="ReceiverBankAccountNumber" class="form-label">Receiver Account Number</label>
                                    </td>
                                    <td>
                                        <input asp-for="ReceiverBankAccountNumber" class="form-control" />
                                        <span asp-validation-for="ReceiverBankAccountNumber" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label asp-for="Amount" class="form-label">Amount</label>
                                    </td>
                                    <td>
                                        <input asp-for="Amount" class="form-control" />
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-paper-plane"></i> Transfer Money
                            </button>
                            <a asp-action="Index" asp-controller="Client" class="btn btn-outline-secondary btn-lg btn-block mt-3">
                                <i class="fas fa-arrow-left"></i> Go back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>