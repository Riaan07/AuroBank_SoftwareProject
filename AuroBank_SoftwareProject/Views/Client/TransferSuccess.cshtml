@model TransferSuccessViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-body text-center py-5">
                    <h2 class="display-5 text-success mb-4">
                        Transfer Successful
                        <i class="fas fa-check-circle"></i>
                    </h2>
                    <p class="lead">
                        <strong>Success!</strong> You have successfully transferred
                        <strong>R @Model.Amount</strong> to account
                        <strong>@Model.ReceiverAccount</strong>.
                    </p>
                    <hr class="my-4" />
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-thumbs-up"></i> Well done! Your transaction was completed without any issues.
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <a asp-action="Index" class="btn btn-primary btn-lg mx-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="TransferMoneyView" class="btn btn-outline-secondary btn-lg mx-2">
                            <i class="fas fa-exchange-alt"></i> Transfer Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

