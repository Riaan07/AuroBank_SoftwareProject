@model IEnumerable<Notification>

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4 display-5">My Notifications</h2>
            <div class="notifications-container">
                @foreach (var notification in Model)
                {
                    <div class="card shadow-sm mb-3" style="border-radius: 15px; border-left: 6px solid @(notification.IsRead ? "#28a745" : "#dc3545");">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="icon-section" style="font-size: 2rem;">
                                <i class="fas @(notification.IsRead ? "fa-check-circle" : "fa-exclamation-circle")"
                                   style="color: @(notification.IsRead ? "#28a745" : "#dc3545");"></i>
                            </div>
                            <div class="details-section ml-3" style="flex-grow: 1;">
                                <h5 class="card-title">@notification.Message</h5>
                                <p class="card-text text-muted">
                                    <i class="fas fa-calendar-alt"></i> @notification.NotificationDate.ToShortDateString()
                                </p>
                            </div>
                            <div class="status-section">
                                <span class="badge @(notification.IsRead ? "bg-success" : "bg-danger")">
                                    @(notification.IsRead ? "Read" : "Unread")
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller="Client" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-left"></i> Go back
                </a>
            </div>
        </div>
    </div>
</div>

