@model List<Transaction>

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4 display-5 text-primary">All My Transactions</h2>

            <div class="transactions-container">
                @foreach (var transaction in Model)
                {
                    <div class="card shadow-sm mb-3" style="border-radius: 15px; background-color: #f7f7f9;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="icon-section" style="font-size: 2rem;">
                                <i class="fas fa-exchange-alt text-success"></i>
                            </div>
                            <div class="details-section ml-3" style="flex-grow: 1;">
                                <h5 class="card-title">Transaction of R @transaction.Amount</h5>
                                <p class="card-text text-muted">
                                    <i class="fas fa-calendar-alt"></i> @transaction.TransactionDate.ToShortDateString()
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-arrow-right text-info"></i> <strong>Sender:</strong> @transaction.BankAccountIdSender
                                    <br />
                                    <i class="fas fa-arrow-left text-info"></i> <strong>Receiver:</strong> @transaction.BankAccountIdReceiver
                                </p>
                            </div>
                            <div class="status-section">
                                <span class="badge bg-primary">
                                    Completed
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller="Client" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-left"></i> Go back
                </a>
            </div>
        </div>
    </div>
</div>

