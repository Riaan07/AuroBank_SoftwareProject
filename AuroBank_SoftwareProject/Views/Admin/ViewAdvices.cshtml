@model IEnumerable<Notification>

<div class="wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Holdings Tech</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Users" class="nav-link">Manage Users</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Manage Consultants</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Notifications</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h3>All Financial Advisor Advise(s)</h3>
        <div class="row">
            @foreach (var rev in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@rev.UserEmail</h5>
                            <p class="card-text">@rev.Message</p>
                            <p class="card-text"><small class="text-muted">Date: @rev.NotificationDate.ToShortDateString()</small></p>
                            <p class="card-text"><strong>Status: @rev.IsRead</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mb-3">
            <a asp-action="Index" asp-controller="Admin" class="btn btn-info">Go back</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

