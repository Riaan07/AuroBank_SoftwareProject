@model ConsultantDepositModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-info text-white">
                    <h3>Deposit or Withdraw Money: @Model.AccountNumber <i class="fas fa-exchange-alt"></i></h3>
                    <h6>Email: @Model.UserEmail</h6>
                </div>
                <div class="card-body">
                    <form asp-action="DepositWithdraw" asp-controller="Consultant" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input asp-for="UserEmail" class="form-control" hidden />
                        <input asp-for="AccountNumber" class="form-control" hidden />

                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <strong>Select Transaction Type</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" value="withdraw" type="radio" name="action" id="flexRadioDefault1" checked>
                                            <label class="form-check-label" for="flexRadioDefault1">Withdraw</label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" value="deposit" type="radio" name="action" id="flexRadioDefault2">
                                            <label class="form-check-label" for="flexRadioDefault2">Deposit</label>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <div class="form-group mb-3">
                                            <label asp-for="Amount" class="control-label">Amount <i class="fas fa-money-bill-alt"></i></label>
                                            <input asp-for="Amount" class="form-control" />
                                            <span asp-validation-for="Amount" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Transfer <i class="fas fa-arrow-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

