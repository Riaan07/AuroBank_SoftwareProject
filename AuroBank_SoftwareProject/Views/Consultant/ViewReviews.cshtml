@model IEnumerable<Reviews>

<div class="container mt-4">
    <h3 class="mb-4">All Client Review(s)</h3>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Comment</th>
                        <th scope="col">Date</th>
                        <th scope="col">Rating</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rev in Model)
                    {
                        <tr>
                            <th scope="row">@rev.UserEmail</th>
                            <td>@rev.Comment</td>
                            <td>@rev.DateReviewed.ToShortDateString()</td>
                            <td><strong>@rev.Rate</strong> out of 5</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>No reviews found.</strong>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Index" asp-controller="Consultant" class="btn btn-info">Go back</a>
    </div>
</div>

